<%= form_with model: task do |form| %>
 <div class="form">
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :details %><br>
      <%= form.text_area :details %><br>
    </div>

    <div>
      <%= form.submit %>
    </div>
 </div>
<% end %>
